---
import "../styles/global.css";
import Header from "../components/shared/header.astro";
import Footer from "../components/shared/footer.astro";

const image = "https://www.twojafirma.pl/preview.jpg";

// dodatkowo image i url
const {title, description, url} = Astro.props;
---

<!doctype html>
<html lang="pl">
<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-FPDKKZYR6S">

    </script>

    <script is:inline>
        window.dataLayer = window.dataLayer || [];
        function gtag(){
            dataLayer.push(arguments);
        }
        gtag('js', new Date());
        gtag('config', 'G-FPDKKZYR6S');
    </script>

    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="generator" content={Astro.generator}/>

    <title>{title}</title>
    <meta name="description" content={description}/>

    <meta name="robots" content="index, follow">
    <link rel="canonical" href={url}/>

    <!-- Facebook -->
    <meta property="og:type" content="website"/>
    <meta property="og:title" content={title}/>
    <meta property="og:description" content={description}/>
    <meta property="og:image" content={image}/>
    <meta property="og:url" content={url}/>

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:title" content={title}/>
    <meta name="twitter:description" content={description}/>
    <meta name="twitter:image" content={image}/>

    <!-- Standardowe favicony -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">

    <!-- iOS (Apple) -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

    <!-- Android / PWA -->
    <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png">

    <!-- Manifest (jeśli plik jest w paczce) -->
    <link rel="manifest" href="/site.webmanifest">


    <!-- JSON-LD Schema.org -->
    <!--name – nazwa firmy taka jak w Google Business Profile.-->
    <!--sprawdz na https://search.google.com/test/rich-results-->

    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@graph": [
                {
                    "@type": [
                        "LocalBusiness",
                        "HomeAndConstructionBusiness"
                    ],
                    "@id": "https://stolarzwsol.pl/",
                    "name": "Zakład Stolarski Tadeusz Wsół",
                    "image": "https://stolarzwsol.netlify.app/images/logo.png",
                    "url": "https://stolarzwsol.pl/",
                    "telephone": "+48 600 123 456",
                    "address": {
                        "@type": "PostalAddress",
                        "streetAddress": "Konina 123",
                        "addressLocality": "Konina",
                        "addressRegion": "Małopolskie",
                        "postalCode": "34-735",
                        "addressCountry": "PL"
                    },
                    "geo": {
                        "@type": "GeoCoordinates",
                        "latitude": 49.6589,
                        "longitude": 20.0892
                    },
                    "openingHoursSpecification": [
                        {
                            "@type": "OpeningHoursSpecification",
                            "dayOfWeek": [
                                "Monday",
                                "Tuesday",
                                "Wednesday",
                                "Thursday",
                                "Friday"
                            ],
                            "opens": "08:00",
                            "closes": "18:00"
                        },
                        {
                            "@type": "OpeningHoursSpecification",
                            "dayOfWeek": "Saturday",
                            "opens": "09:00",
                            "closes": "14:00"
                        }
                    ],
                    "priceRange": "$$",
                    "areaServed": [
                        {
                            "@type": "Place",
                            "name": "Małopolskie"
                        },
                        {
                            "@type": "Place",
                            "name": "Powiat Limanowski"
                        },
                        {
                            "@type": "Place",
                            "name": "Niedźwiedź"
                        }
                    ],
                    "sameAs": [
                        "https://www.facebook.com/stolarzwsol",
                        "https://www.instagram.com/stolarzwsol"
                    ]
                },
                {
                    "@type": "Product",
                    "@id": "https://stolarzwsol.pl/#product-drzwi",
                    "name": "Drzwi drewniane dębowe na wymiar",
                    "image": "https://stolarzwsol.netlify.app/images/drzwi-debowe.jpg",
                    "description": "Solidne drzwi drewniane wykonane z dębu, projektowane i tworzone na wymiar dla klientów w Małopolsce.",
                    "brand": {
                        "@type": "Brand",
                        "name": "Zakład Stolarski Jan Kowalski"
                    },
                    "offers": {
                        "@type": "Offer",
                        "url": "https://stolarzwsol.netlify.app/oferta/drzwi-debowe",
                        "priceCurrency": "PLN",
                        "price": "2500",
                        "availability": "https://schema.org/InStock"
                    }
                },
                {
                    "@type": "FAQPage",
                    "@id": "https://stolarzwsol.pl/#faq",
                    "mainEntity": [
                        {
                            "@type": "Question",
                            "name": "Czy wykonujecie drzwi drewniane na wymiar?",
                            "acceptedAnswer": {
                                "@type": "Answer",
                                "text": "Tak, wykonujemy drzwi drewniane na indywidualne zamówienie klienta. Doradzamy w wyborze drewna i stylu."
                            }
                        },
                        {
                            "@type": "Question",
                            "name": "Czy obsługujecie całą Małopolskę?",
                            "acceptedAnswer": {
                                "@type": "Answer",
                                "text": "Tak, obsługujemy klientów z całego województwa małopolskiego, w tym z powiatu limanowskiego i okolicznych miejscowości."
                            }
                        },
                        {
                            "@type": "Question",
                            "name": "Jak długo trwa realizacja zamówienia?",
                            "acceptedAnswer": {
                                "@type": "Answer",
                                "text": "Średni czas realizacji drzwi drewnianych wynosi 4-6 tygodni w zależności od stopnia skomplikowania projektu."
                            }
                        }
                    ]
                }
            ]
        }
    </script>
</head>
<body class="bg-gradient-to-r from-[#FDFCFA] to-[#EEE6D6]">
<Header/>

<main>
    <slot/>
</main>

<Footer/>
</body>
</html>